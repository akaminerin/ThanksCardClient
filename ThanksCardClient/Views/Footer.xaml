<UserControl x:Class="ThanksCardClient.Views.Footer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:prism="http://prismlibrary.com/"
      prism:ViewModelLocator.AutoWireViewModel="True" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ThanksCardClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="450" Width="800">
        <Grid.Background>
            <ImageBrush ImageSource="/Views/2.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <Button Content="部署" HorizontalAlignment="Left" Height="55" Margin="46,226,0,0" VerticalAlignment="Top" Width="214" FontSize="30"  Command="{Binding ShowDepartmentMstCommand}"/>
        <Button Content="サンクスカード" HorizontalAlignment="Left" Height="55" Margin="306,226,0,0" VerticalAlignment="Top" Width="214" FontSize="30" Command="{Binding ShowThanksCardSendCommand}"/>
        <Button Content="掲示板" HorizontalAlignment="Left" Height="55" Margin="558,353,0,0" VerticalAlignment="Top" Width="214" FontSize="30" Command="{Binding ShowkeijibanCommand}"/>
        <Button Content="ログアウト" HorizontalAlignment="Left" Height="55" Margin="44,349,0,0" VerticalAlignment="Top" Width="214" FontSize="30" Command="{Binding LogoffCommand}" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="社員登録" HorizontalAlignment="Left" Height="55" Margin="559,227,0,0" VerticalAlignment="Top" Width="218" FontSize="30"/>
        <Button Content="MVP" HorizontalAlignment="Left" Height="55" Margin="302,352,0,0" VerticalAlignment="Top" Width="218" FontSize="30" Command="{Binding ShowMVPCommand}"/>
        <Button Content="マニュアル" HorizontalAlignment="Left" Height="64" Margin="520,64,0,0" VerticalAlignment="Top" Width="218" FontSize="30" Command="{Binding ShowmanualCommand}"/>
        <TextBlock HorizontalAlignment="Left" Height="40" Margin="62,40,0,0" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="34" FontSize="30"/>
        <TextBlock HorizontalAlignment="Left" Height="40" Margin="34,94,0,0" TextWrapping="Wrap" Text="社員名" VerticalAlignment="Top" Width="102" FontSize="30"/>
    </Grid>
</UserControl>